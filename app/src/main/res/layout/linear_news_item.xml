<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:id="@+id/savedNewsContainer"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/savedNewsTitle"
        android:paddingVertical="10dp"
        android:layout_toLeftOf="@+id/cardImageContainer"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="Hi from there, what are you doing today can we meet"
        />
    <TextView
        android:id="@+id/resourceName"
        android:layout_width="wrap_content"
        android:layout_below="@id/savedNewsTitle"
        android:layout_alignParentBottom="true"
        android:text="No Information"
        android:gravity="bottom"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="120dp"
        app:cardCornerRadius="10dp"
        android:layout_height="120dp"
        android:id="@+id/cardImageContainer">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/savedNewsImage"
            android:src="@mipmap/news"
            android:scaleType="centerCrop"
            android:background="@drawable/linear_news_item_bg"
             />
    </androidx.cardview.widget.CardView>
    <View
        android:layout_alignParentBottom="true"
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>